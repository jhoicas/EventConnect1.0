{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "EventConnectConnection": "Server=127.0.0.1;Port=3306;Database=db_eventconnect;User=root;Password=1234;AllowPublicKeyRetrieval=true;SslMode=none;Pooling=true;MinimumPoolSize=0;MaximumPoolSize=100;ConnectionLifeTime=0;ConnectionTimeout=30;"
  },
  "AllowedCorsOrigins": [
    "http://localhost:3000",
    "http://localhost:5173"
  ],
  "JwtSettings": {
    "Secret": "EventConnect_SuperSecretKey_ForJWT_TokenGeneration_MustBe32CharactersOrMore_2024",
    "Issuer": "EventConnect",
    "Audience": "EventConnectClients",
    "TokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "AppSettings": {
    "PasswordMinLength": 8,
    "PasswordRequireUppercase": true,
    "PasswordRequireLowercase": true,
    "PasswordRequireDigit": true,
    "PasswordRequireSpecialChar": true,
    "BcryptWorkFactor": 12,
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 30
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "Window": 60,
    "QueueLimit": 2
  }
}
